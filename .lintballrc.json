{
    "check_args": {
      "autoflake": "--check --expand-star-imports --remove-all-unused-imports --remove-duplicate-keys --remove-unused-variables",
      "autopep8": "--global-config '.pyproject.toml' --diff",
      "black": "--check --line-length=120 --experimental-string-processing --skip-string-normalization",
      "clippy": "-- -D clippy::all",
      "docformatter": "--check",
      "isort": "--settings-path './.pyproject.toml' --check-only",
      "nimpretty": "",
      "prettier": "--config '.prettierrc'",
      "prettier-eslint": "--eslint-config-path '.eslintrc.json' --config '.prettierrc'"
    },
    "write_args": {
      "autoflake": "--in-place --expand-star-imports --remove-all-unused-imports --remove-duplicate-keys --remove-unused-variables",
      "autopep8": "--global-config '.pyproject.toml' --in-place",
      "black": "--line-length=120 --experimental-string-processing --skip-string-normalization",
      "clippy": "--allow-no-vcs --fix -Z unstable-options -- -D clippy::all",
      "docformatter": "--in-place",
      "isort": "--settings-path '.pyproject.toml'",
      "nimpretty": "",
      "prettier": "--write --config '.prettierrc'",
      "prettier-eslint": "--write --eslint-config-path '.eslintrc.json' --config '.prettierrc'"
    },
    "use": {
      "autoflake": true,
      "autopep8": true,
      "black": true,
      "clippy": true,
      "docformatter": false,
      "isort": false,
      "nimpretty": false,
      "prettier": true,
      "prettier-eslint": true,
      "rubocop": false,
      "shellcheck": false,
      "shfmt": false,
      "stylua": false,
      "uncrustify": false,
      "yamllint": false
    }
  }